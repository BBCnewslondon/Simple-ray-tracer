{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Ray Tracer",
            "type": "shell",
            "command": "mkdir -p build && cd build && cmake .. && make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Run Ray Tracer",
            "type": "shell",
            "command": "./build/hello > image.ppm",
            "group": "test",
            "dependsOn": "Build Ray Tracer"
        }
    ]
}